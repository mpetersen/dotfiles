#!/bin/bash

brew update
brew upgrade

# Java is required by some formulae (e.g. maven), so it is installed explicitly
# here.
brew cask install --appdir=/Applications java

formulae=(
    bash-completion
    bash-git-prompt
    gnupg
    go
    graphviz
    lftp
    libpng
    maven
    mercurial
    mongodb
    ncftp
    openssl
    plantuml
    tree
    unrar
    wget
)

for formula in "${formulae[@]}"; do
    brew install $formula
done

