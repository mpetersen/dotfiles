# Install Safari plugins
#
# E.g. like this: curl -L -o ~/Downloads/plugin.safariextz https://www.ghostery.com/safari/Ghostery.safariextz && open ~/Downloads/plugin.safariextz

extensions=(
    http://www.instapaper.com/static/files/instapaper.safariextz
    https://www.ghostery.com/safari/Ghostery.safariextz
    https://github.com/hoyois/clicktoplugin/releases/download/v3.1.6/ClickToPlugin.safariextz
)

local ext_dir="~/Library/Safari/Extensions"

mkdir -p $ext_dir
cd $ext_dir

for extension in "${extensions[@]}"; do
    curl -LO $extension
done
