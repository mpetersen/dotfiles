formulae=(
    java
    atom
    caffeine
    dropbox
    intellij-idea-ce
    onyx
    superduper
    bittorrent-sync
    clipmenu
    hex-fiend
    iterm2
    menumeters
    owncloud
    eclipse-java
    evernote
)

brew cask install --appdir=/Applications ${formulae[@]}

# Launch some apps
apps=(
    "Bittorrent Sync"
    "Caffeine"
    "Dropbox"
    "ClipMenu"
    "owncloud"
    "MenuMeters"
)

for app in "${apps[@]}"; do
    open -a "/Applications/$app.app"
done
