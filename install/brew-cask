formulae=(
    atom
    bittorrent-sync
    caffeine
    clipmenu
    dropbox
    eclipse-java
    evernote
    hex-fiend
    intellij-idea-ce
    iterm2
    java
    keepassx
    menumeters
    onyx
    owncloud
    superduper
)

brew cask install --appdir=/Applications ${formulae[@]}

# Launch some apps
apps=(
    "Bittorrent Sync"
    "Caffeine"
    "ClipMenu"
    "Dropbox"
    "KeePassX"
    "owncloud"
)

for app in "${apps[@]}"; do
    open -a "/Applications/$app.app"
done

# Launch some preference panes
pref_panes=(
    "MenuMeters"
)

for pref_pane in "${pref_panes[@]}"; do
    open ~/Library/PreferencePanes/$pref_pane.prefPane
done
