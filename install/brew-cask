formulae=(
    adobe-creative-cloud
    atom
    bbedit
    dropbox
    macpass
    firefox
    hex-fiend
    intellij-idea-ce
    istat-menus
    iterm2
    libreoffice
    onyx
    sourcetree
    spotify
    virtualbox
    xmind
    https://raw.githubusercontent.com/m12n/homebrew-cask/f8f7cf8cb918a97fdf5e5fcf9cfeccf99503be7b/Casks/kickmount.rb
)
for formula in "${formulae[@]}"; do
    brew cask install --force --appdir=/Applications $formula
done


# Install QuickLook plugins
qlplugins=(
    qlcolorcode
    qlstephen
    qlmarkdown
    quicklook-json
    qlprettypatch
    quicklook-csv
    betterzipql
    webpquicklook
#    suspicious-package
)
brew cask install ${qlplugins[@]}
qlmanage -r


# Launch some apps
apps=(
    "Caffeine"
    "Cinch"
    "ClipMenu"
    "Dropbox"
    "iStat Menus"
    "KeePassX"
)
for app in "${apps[@]}"; do
    open -a "/Applications/$app.app"
done
