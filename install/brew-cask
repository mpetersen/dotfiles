formulae=(
    adobe-creative-cloud
    amazon-music
    atom
    bbedit
    docker
    dropbox
    evernote
    hex-fiend
    ichm
    intellij-idea-ce
    istat-menus
    iterm2
    java
    libreoffice
    macpass
    postman
    skype
    spotify
    virtualbox
    vlc
    wireshark
    xmind
)
for formula in "${formulae[@]}"; do
    brew cask install --appdir=/Applications $formula
done


# Install QuickLook plugins
qlplugins=(
    qlcolorcode
    qlstephen
    qlmarkdown
    quicklook-json
    qlprettypatch
    quicklook-csv
    betterzipql
    webpquicklook
#    suspicious-package
)
brew cask install ${qlplugins[@]}
qlmanage -r


# Launch some apps
apps=(
    "Caffeine"
    "Cinch"
    "ClipMenu"
    "Dropbox"
    "iStat Menus"
    "KeePassX"
    "owncloud"
)
for app in "${apps[@]}"; do
    open -a "/Applications/$app.app"
done
