formulae=(
    java
    atom
    caffeine
    dropbox
    intellij-idea-ce
    onyx
    superduper
    bittorrent-sync
    clipmenu
    hex-fiend
    iterm2
    menumeters
    owncloud
    eclipse-java
    evernote
    keepassx
)

brew cask install --appdir=/Applications ${formulae[@]}

# Launch some apps
apps=(
    "Bittorrent Sync"
    "Caffeine"
    "Dropbox"
    "ClipMenu"
    "owncloud"
    "MenuMeters"
    "KeePassX"
)

for app in "${apps[@]}"; do
    open -a "/Applications/$app.app"
done

# Launch some preference panes
pref_panes=(
    "MenuMeters"
)

for pref_pane in "${pref_panes[@]}"; do
    open "~/Library/PreferencePanes/$pref_pane.prefPane"
done
