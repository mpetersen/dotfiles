)
brew cask install --appdir=/Applications ${formulae[@]}

# Install QuickLook plugins
qlplugins=(
    qlcolorcode
    qlstephen
    qlmarkdown
    quicklook-json
    qlprettypatch
    quicklook-csv
    betterzipql
    webpquicklook
#    suspicious-package
)
brew cask install ${qlplugins[@]}
qlmanage -r


# Launch some apps
apps=(
    "Caffeine"
    "Cinch"
    "ClipMenu"
    "Dropbox"
    "iStat Menus"
    "KeePassX"
    "owncloud"
)
for app in "${apps[@]}"; do
    open -a "/Applications/$app.app"
done
