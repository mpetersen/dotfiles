formulae=(
    adobe-creative-cloud
    atom
    boxcryptor
    caffeine
    cinch
    clamxav
    clipmenu
    dropbox
    dwihn0r-keepassx
    eclipse-java
    evernote
    firefox
    hex-fiend
    intellij-idea-ce
    istat-menus
    iterm2
    libreoffice
    onyx
    owncloud
    p4merge
    sourcetree
    spotify
    sqlitebrowser
    superduper
    virtualbox
    xmind
)
for formula in "${formulae[@]}"; do
    brew cask install --appdir=/Applications $formula
done


# Install QuickLook plugins
qlplugins=(
    qlcolorcode
    qlstephen
    qlmarkdown
    quicklook-json
    qlprettypatch
    quicklook-csv
    betterzipql
    webpquicklook
#    suspicious-package
)
brew cask install ${qlplugins[@]}
qlmanage -r


# Launch some apps
apps=(
    "Caffeine"
    "Cinch"
    "ClipMenu"
    "Dropbox"
    "iStat Menus"
    "KeePassX"
    "owncloud"
)
for app in "${apps[@]}"; do
    open -a "/Applications/$app.app"
done
