formulae=(
    adobe-creative-cloud
    atom
    bittorrent-sync
    burn
    caffeine
    cinch
    citrix-receiver
    clamxav
    clipmenu
    dropbox
    duet
    eclipse-java
    evernote
    firefox
    garagesale
    google-chrome
    handbrake
    hex-fiend
    intellij-idea-ce
    iterm2
    java
    keepassx
    kindle
    libreoffice
    mediathekview
    menumeters
    onyx
    owncloud
    sourcetree
    spotify
    steam
    superduper
    teamviewer
    things
    transmission
    virtualbox
    vlc
    wacom-tablet
    xld
    xmind
)

brew cask install --appdir=/Applications ${formulae[@]}

# Install QuickLook plugins
brew cask install qlcolorcode qlstephen qlmarkdown quicklook-json qlprettypatch quicklook-csv betterzipql webp-quicklook suspicious-package && qlmanage -r


# Launch some apps
apps=(
    "Bittorrent Sync"
    "Caffeine"
    "ClipMenu"
    "Dropbox"
    "KeePassX"
    "owncloud"
    "Cinch"
)

for app in "${apps[@]}"; do
    open -a "/Applications/$app.app"
done

# Launch some preference panes
pref_panes=(
    "MenuMeters"
)

for pref_pane in "${pref_panes[@]}"; do
    open ~/Library/PreferencePanes/$pref_pane.prefPane
done
