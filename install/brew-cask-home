formulae=(
    backblaze
    burn
    duet
    https://raw.githubusercontent.com/caskroom/homebrew-cask/db7834d0199f0237300f18305c3cb10ca90259ef/Casks/garagesale.rb
    handbrake
    kindle
    mediathekview
    sonos
    steam
    teamviewer
    transmission
    vlc
    wacom-intuos-tablet
    xld
)
for formula in "${formulae[@]}"; do
    brew cask install --force --appdir=/Applications $formula
done
