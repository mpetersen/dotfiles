brew cask install --appdir=/Applications atom

apm upgrade --no-confirm

packages=(
    atom-beautify
    go-plus
    graphviz-preview
    highlight-selected
    language-plantuml
    markdown-format
    plantuml-viewer
    sort-lines
)

for package in "${packages[@]}"; do
    dir=~/.atom/packages/$package
    [ ! -d $dir ] && apm install $package
done
